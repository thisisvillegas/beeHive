; PlatformIO Configuration for ESP32 Homecontrol
; MVP: WiFi captive portal + MQTT + LED control

[env:esp32dev]
platform = espressif32
board = esp32dev
framework = arduino
monitor_speed = 115200
upload_speed = 921600
build_src_filter = +<main.cpp> -<main_minimal.cpp> -<main_async.cpp> -<main_tdisplay.cpp>

; Libraries
lib_deps =
    knolleary/PubSubClient@^2.8
    bblanchon/ArduinoJson@^7.0.0
    https://github.com/tzapu/WiFiManager.git

; LittleFS for web UI files
board_build.filesystem = littlefs

; Build flags
build_flags =
    -DCORE_DEBUG_LEVEL=3
    -DLED_BUILTIN=2
    -DMQTT_SOCKET_TIMEOUT=60

; Async environment - non-blocking MQTT and WebServer
[env:async]
platform = espressif32
board = esp32dev
framework = arduino
monitor_speed = 115200
upload_speed = 921600
build_src_filter = +<main_async.cpp> -<main.cpp> -<main_minimal.cpp> -<main_tdisplay.cpp>
lib_deps =
    bblanchon/ArduinoJson@^7.0.0
    https://github.com/tzapu/WiFiManager.git
    https://github.com/bertmelis/espMqttClient.git
    https://github.com/ESP32Async/AsyncTCP.git
    https://github.com/ESP32Async/ESPAsyncWebServer.git
board_build.filesystem = littlefs
build_flags =
    -DCORE_DEBUG_LEVEL=3
    -DLED_BUILTIN=2

